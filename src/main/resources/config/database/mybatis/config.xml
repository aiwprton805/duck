<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <settings>
        <setting name="lazyLoadingEnabled" value="true" />
        <setting name="autoMappingUnknownColumnBehavior" value="FAILING" />
        <setting name="lazyLoadTriggerMethods" value="equals,clone,hashCode,toString" />
        <setting name="logImpl" value="SLF4J" />
    </settings>

    <typeAliases>
        <typeAlias alias="User"             type="com.magistr.duck.entity.User" />
        <typeAlias alias="Role"             type="com.magistr.duck.entity.Role" />
        <typeAlias alias="Term"             type="com.magistr.duck.entity.Term" />
        <typeAlias alias="TermInfo"         type="com.magistr.duck.entity.TermInfo" />
        <typeAlias alias="TermCommonInfo"   type="com.magistr.duck.entity.TermInfo$TermCommonInfo" />
        <typeAlias alias="Lang"             type="com.magistr.duck.common.enums.Lang" />
    </typeAliases>

    <mappers>
        <mapper resource="config/database/mybatis/mappers/User.xml" />
        <mapper resource="config/database/mybatis/mappers/Term.xml" />
        <mapper resource="config/database/mybatis/mappers/TermInfo.xml" />
    </mappers>
</configuration>
